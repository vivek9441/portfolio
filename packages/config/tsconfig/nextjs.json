{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "incremental": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "strict": true,
        "target": "es2022"
    },
    "include": [
        "src",
        "next-env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
